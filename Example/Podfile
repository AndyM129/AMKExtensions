use_frameworks!

platform :ios, '10.0'

def common_pods
    pod 'AMKExtensions', :path => '../'
    pod 'SnapKit'
    pod 'AMKStackView'
    pod 'FLEX'
    #pod 'JSONKit'
    pod 'HandyJSON'
    pod 'FDFullscreenPopGesture'
end

target 'AMKExtensions_Example' do
    common_pods
    
    target 'AMKExtensions_Tests' do
        inherit! :search_paths
    end
end

target 'Weixin' do
    common_pods
end
